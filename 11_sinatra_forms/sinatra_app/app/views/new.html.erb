  <label>Title</label>
  <input type="text" name="title"/>
  <br>
  <label>Author</label>
  <input type="text" name="author"/>
  <br>
  <label>Snippet</label>
  <input type="text" name="snippet"/>
  <br>
  <input type="submit"/>
</form>
